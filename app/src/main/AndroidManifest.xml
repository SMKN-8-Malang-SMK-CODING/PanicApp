<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.panic.panicapp">

    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/panic_logo_android"
        android:label="@string/app_name"
        android:roundIcon="@drawable/panic_logo_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Tema">
        <activity android:name=".Activity.kejadianDetailActivity"></activity>
        <activity android:name=".Activity.profilUpdate" />
        <activity android:name=".Activity.registerActivity" />
        <activity android:name=".Activity.berandaActivity" />
        <activity android:name=".Activity.settingActivity" />
        <activity android:name=".splashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.mainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>